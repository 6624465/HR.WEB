@model HR.Web.ViewModels.AddressVm

<div class="panel panel-default panel-hovered panel-stacked mb10">
    <div class="panel-heading">Address</div>
    <div class="panel-body">
        <div class="row css5">
            <div class="form-group">
                <label class="col-md-2 control-label">
                    <span class="pull-right">Address1</span>
                </label>
                <div class="col-md-4">
                    @Html.TextAreaFor(x => x.Address1, new { @class = "form-control" })
                </div>
                <label class="col-md-2 control-label">
                    <span class="pull-right">Address2</span>
                </label>
                <div class="col-md-4">
                    @Html.TextAreaFor(x => x.Address2, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row css5">
            <div class="form-group">
                <label class="col-md-2 control-label">
                    <span class="pull-right">City Name</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.CityName, new { @class = "form-control" })
                </div>
                <label class="col-md-2 control-label">
                    <span class="pull-right">State Name</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.StateName, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row css5">
            <div class="form-group">
                <label class="col-md-2 control-label">
                    <span class="pull-right">Country Code</span>
                </label>
                <div class="col-md-4">
                    @Html.DropDownListFor(x => x.CountryCode, SelectListItemHelper.CountryList(),
                                   "--Select--", new { @class = "form-control" })
                </div>
                <label class="col-md-2 control-label">
                    <span class="pull-right">Zip Code</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.ZipCode, new { @class = "form-control number" })
                </div>
            </div>
        </div>

        <div class="row css5">
            <div class="form-group">
                <label class="col-md-2 control-label">
                    <span class="pull-right">Tel No</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.TelNo, new { @class = "form-control validatenumber" })
                </div>
                <label class="col-md-2 control-label">
                    <span class="pull-right">Fax No</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.FaxNo, new { @class = "form-control validatenumber" })
                </div>
            </div>
        </div>
        <div class="row css5">
            <div class="form-group">
                <label class="col-md-2 control-label">
                    <span class="pull-right">Mobile No</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control validatenumber" })
                </div>
                <label class="col-md-2 control-label">
                    <span class="pull-right">Contact</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.Contact, new { @class = "form-control validatenumber" })
                </div>
            </div>
        </div>

        <div class="row css5">
            <div class="form-group">
                <label class="col-md-2 control-label">
                    <span class="pull-right">Email</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
                <label class="col-md-2 control-label">
                    <span class="pull-right">WebSite</span>
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.WebSite, new { @class = "form-control" })
                </div>
            </div>
        </div>


    </div>

</div>
