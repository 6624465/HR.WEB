@model HR.Web.ViewModels.variablepayEditVm

<div class="row">
    <table class="table table-conden table-bordered">
        @Html.HiddenFor(x=>x.variablepaymentdetail.DetailID)
@for (int i = 0; i < Model.salarystructuredetail.Count(); i++)
{
  <tr>
            <td>
                @Html.HiddenFor(x=>x.salarystructuredetail[i].StructureID)
                @Html.DisplayFor(X => X.salarystructuredetail[i].Code)
                @Html.HiddenFor(x=>x.salarystructuredetail[i].Description)
            </td>
            <td>
                    @Html.TextBoxFor(x=>x.salarystructuredetail[i].Amount)
           </td>
        </tr>
    }


    </table>
</div>