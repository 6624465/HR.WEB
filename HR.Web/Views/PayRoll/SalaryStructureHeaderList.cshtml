@model HR.Web.ViewModels.HtmlTblVm<HR.Web.Models.SalaryStructureHeader>

<div class="page">
    <div class="page-wrap">
        <div class="panel panel-default panel-hovered panel-stacked mb10">
            <div class="panel-heading">
                Salary Structures List
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn  btn-primary btn-sm" onclick="location.href='@Url.Content("~/PayRoll/SalaryStructure")'"><i class="fa fa-plus-square"></i>Create</button>
                    </div>
                </div>
              
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Effective Date</th>
                            <th>Remarks</th>
                            <th>#Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.TableData.Count(); i++)
                        {
                            @Html.HiddenFor(x => x.TableData[i].StructureID)
                            <tr>
                                <td>@Model.TableData[i].Code</td>
                                <td>@Model.TableData[i].EffectiveDate</td>
                                <td>@Model.TableData[i].Remarks</td>
                                <td><button class="btn btn-xs btn-raised waves-effect btn-sm" style="padding-left: 5px;margin-left: 6px;"onclick="location.href='@Url.Content("~/PayRoll/SalaryStructure/?structurId=" +Model.TableData[i].StructureID)'">
                                    <i class="fa fa-pencil" style="padding-left: 5px;"></i>
                                    </button>
                                <button class="btn btn-xs btn-danger waves-effect btn-sm" style="padding-left: 5px;margin-left: 6px;">
                                    <i class="fa fa-trash-o" style="padding-left: 5px;" aria-hidden="true"> </i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
@section Scripts{
    <script>
        $(function () {
            $('#li_PayRollConfig').addClass('open');
            $('#li_SalaryStructureHeaderList').addClass('active');
        });
       
    </script>
    }
        

