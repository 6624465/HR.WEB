@model HR.Web.ViewModels.HtmlTblVm<HR.Web.Models.TravelClaimHeader>
@section Styles{
    <style>
        .pagination {
            display: table;
            margin: 15px auto;
            position: relative;
            float: right;
        }

        .width {
            width: 60%;
        }
    </style>
}


<div class="page">
    <div class="page-wrap">
        <div class="panel panel-default">
            <div class="center-block width">
                <div class="panel-heading">
                   Travel Claim List
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-primary btn-sm ajaxCss pull-right"
                                     onclick="location.href='@Url.Content("~/PayRoll/TravelClaim?travelClaimId=0")'"><i class="fa fa-plus-square"></i>&nbsp;Create</button>
                        </div>
                    </div>
                    <table class="table table-conden table-bordered">
                        <thead>
                            <tr>
                                <th>
                                   Employee Name
                                </th>
                                <th>
                                    No Of Days
                                </th>
                                <th>
                                    #Action
                                </th>
                            </tr>
                        </thead>

                        @for (var i = 0; i < Model.TableData.Count(); i++)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        @Model.TableData[i].Name
                                    </td>
                                    <td>
                                        @Model.TableData[i].NoOfDays
                                    </td>
                                    <td>
                                        <button class="btn btn-xs btn-raised waves-effect btn-sm ajaxCss" 
                                                style="padding-left: 5px;margin-left: 6px;"
                                                onclick="location.href='@Url.Content("~/PayRoll/TravelClaim?travelClaimId=" + Model.TableData[i].TravelClaimId)'">
                                            <i class="fa fa-pencil" style="padding-left: 5px;"></i>
                                        </button>
                                       
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="pagination"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
