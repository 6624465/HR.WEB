@model HR.Web.ViewModels.SalaryStructureVm

@{
    var fname = string.Empty;
    if (!string.IsNullOrWhiteSpace(Request.QueryString["fname"]))
    {
        fname = Request.QueryString["fname"];
    }
}

@section Styles{

    <style type="text/css">
        .table tbody td:nth-child(5) {
            width: 170px;
        }

        .table tbody td:nth-child(6) {
            width: 170px;
        }

        .table tbody td:nth-child(7) {
            width: 120px;
            direction: rtl;
        }

        .table tbody td:nth-child(8) {
            width: 120px;
            direction: rtl;
        }

        .table tfoot {
            /*display:block;*/
        }

        currencyCss {
            direction: rtl;
        }

        .table tfoot {
            display: table-footer-group;
        }
    </style>
}
<div class="page">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default panel-hovered panel-stacked mb10">
                <div class="panel-heading">
                    Salary Structure
                </div>
                <div class="panel-body">
                    <div class="row css5">
                        <label class="col-md-2 control-label">
                            <span class="pull-right">Code</span>
                        </label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(x => x.structureHeader.Code, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row css5">
                        <label class="col-md-1 control-label">
                            <span class="pull-right">Remarks</span>
                        </label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(x => x.structureHeader.Remarks, new { @class = "form-control" })
                        </div>
                        <label class="col-md-1 control-label">
                            <span class="pull-right">Effective Date</span>
                        </label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(x => x.structureHeader.EffectiveDate, new { @class = "form-control" })
                        </div>
                        <label class="col-md-1 control-label">
                            <span class="pull-right">Is Active</span>
                        </label>
                        <div class="col-md-3">
                            @Html.CheckBox(nameof(Model.structureHeader.IsActive), Model.structureHeader.IsActive ?? false, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="clearfix">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab-home" data-toggle="tab" aria-expanded="true">Salary Rules</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab-home">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive">
                                            <table class="table table-condensed">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th>CODE</th>
                                                        <th>DESCRIPTION</th>
                                                        <th>CONTRIBUTION REGISTER</th>
                                                        <th>COMPUTATION</th>
                                                        <th>AMOUNT</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @for (int i = 0; i < Model.structureDetail.Count; i++)
                                                    {
                                                        <tr>
                                                            <td>
                                                                 </td>
                                                            <td>@Html.DisplayFor(x => x.structureDetail[i].Code)</td>
                                                            <td style="width:250px;">@Html.DisplayFor(x => x.structureDetail[i].Description)</td>

                                                            <td>
                                                                @Html.DropDownListFor(x => x.structureDetail[i].RegisterCode,
                                                               SelectListItemHelper.ContributionRegister(), "Select", new { @class = "form-control" })
                                                            </td>
                                                            <td>
                                                                @Html.DropDownListFor(x => x.structureDetail[i].ComputationCode,
                                                               SelectListItemHelper.Computation(), "Select", new { @class = "form-control" })
                                                            </td>
                                                            <td>
                                                                @Html.TextBoxFor(x => x.structureDetail[i].Amount)
                                                            </td>

                                                        </tr>
                                                    }

                                                </tbody>

                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-primary btn-sm" type="button"><i class="fa fa-floppy-o" aria-hidden="true"></i>Save</button>
        </div>
    </div>
</div>
