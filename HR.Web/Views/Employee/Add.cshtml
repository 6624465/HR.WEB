@model HR.Web.ViewModels.EmployeeVm
@using (Html.BeginForm("SaveEmployee", "Employee", FormMethod.Post, new { id = "frmEmp", name = "frmEmp", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.empHeader.EmployeeId)
    @Html.HiddenFor(x => x.empHeader.BranchId)
    <div class="page">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-hovered panel-stacked mb10">
                    <div class="panel-heading">Profile</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">ID Type</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(x => x.empHeader.IDType,
                                    SelectListItemHelper.EmployeeType(),
                                    "Select Type",
                                    new { @class = "form-control" })
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">DOJ</span>
                                </label>
                                <div class="col-md-4">
                                    <div class="input-group date" id="JoiningDate">
                                        @Html.TextBoxFor(x => x.empWorkDetail.JoiningDate, new { @class = "form-control dtCss", required = "required" })
                                        <span class="input-group-addon">
                                            <i class="ion ion-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">First Name</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.empHeader.FirstName,
                                       new { @class = "form-control" })
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Last Name</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.empHeader.LastName,
                                         new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Middle Name</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.empHeader.MiddleName,
                                     new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <label class="col-md-2 control-label">
                                <span class="pull-right">DOB</span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-group date" id="DOB">
                                    @Html.TextBoxFor(x => x.empPersonalDetail.DOB, new { @class = "form-control dtCss" })
                                    <span class="input-group-addon">
                                        <i class="ion ion-calendar"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-1"></div>
                            <div class="col-md-5">
                                <label>
                                    @Html.RadioButtonFor(x => x.empPersonalDetail.Gender, 101, "Male")
                                    <span>Male</span>
                                </label>
                                &nbsp;
                                <label>
                                    @Html.RadioButtonFor(x => x.empPersonalDetail.Gender, 102, "Female")
                                    <span>Female</span>
                                </label>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Email</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.empHeader.UserEmailId,
                                    new { @class = "form-control" })
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Mobile</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.address.MobileNo,
                                     new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Father's Name</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.empPersonalDetail.FatherName,
                                      new { @class = "form-control" })
                                 </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Nationality</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(x => x.empHeader.Nationality,
                                         SelectListItemHelper.CountryList(), "Select Country",
                                          new { @class = "form-control" })
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Marital Status</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(x => x.empPersonalDetail.MaritalStatus,
                                       SelectListItemHelper.MaritalStatus(), "Select Marital Status",
                                       new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group" style="white-space:nowrap">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Emg. Contact Name</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.empPersonalDetail.EmergencyContactName,
                                    new { @class = "form-control" })
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Emg. Contact No</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.empPersonalDetail.EmergencyContactNumber,
                                    new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default panel-hovered panel-stacked mb10">
                    <div class="panel-heading">Address</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Address 1</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.TextAreaFor(x => x.address.Address1,
                                    new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Address 2</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.TextAreaFor(x => x.address.Address2,
                                     new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">City</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(x => x.address.CityName,
                                    new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">State</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(x => x.address.StateName,
                                    new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Postal Code</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(x => x.address.ZipCode,
                                    new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default panel-hovered panel-stacked mb10">
                    <div class="panel-heading">Employee Position</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Designation</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(x => x.empWorkDetail.DesignationId,
                                     SelectListItemHelper.Designation(),
                                     "Select Designation",
                                     new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Department</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(x => x.empWorkDetail.DepartmentId,
                                     SelectListItemHelper.Department(),
                                     "Select Department",
                                     new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Notice Period</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(x => x.empWorkDetail.NoticePeriod,
                                     SelectListItemHelper.NoticePeriod(),
                                     "Select NoticePeriod",
                                     new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Prohibation</span>
                                </label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(x => x.empWorkDetail.ProbationPeriod,
                                     SelectListItemHelper.ProhibationPeriod(),
                                     "Select Prohibation",
                                     new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Confirmation Dt</span>
                                </label>
                                <div class="col-md-9">
                                    <div class="input-group date" id="ConfirmationDate">
                                        @Html.TextBoxFor(x => x.empWorkDetail.ConfirmationDate, new { @class = "form-control dtCss" })
                                        <span class="input-group-addon">
                                            <i class="ion ion-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">Resigned Dt</span>
                                </label>
                                <div class="col-md-9">
                                    <div class="input-group date" id="ResignationDate">
                                        @Html.TextBoxFor(x => x.empWorkDetail.ResignationDate, new { @class = "form-control dtCss" })
                                        <span class="input-group-addon">
                                            <i class="ion ion-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-hovered panel-stacked mb10">
                    <div class="panel-heading">Employee Login Info</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-1 control-label">
                                    <span class="pull-right">Email</span>
                                </label>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(x => x.empHeader.UserEmailId,
                                    new { @class = "form-control" })
                                </div>

                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-1 control-label">
                                    <span class="pull-right">Password</span>
                                </label>
                                <div class="col-md-3">
                                    @Html.PasswordFor(x => x.empHeader.Password,
                                    new { @class = "form-control", value = Model.empHeader.Password })
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Confirm Password</span>
                                </label>
                                <div class="col-md-3">
                                    @Html.PasswordFor(x => x.empHeader.ConfirmPassword,
                                    new { @class = "form-control", value = Model.empHeader.ConfirmPassword })
                                </div>
                                <label class="col-md-1 control-label">
                                    <span class="pull-right">Status</span>
                                </label>
                                <div class="col-md-2">
                                    @Html.CheckBoxFor(x => x.empHeader.IsActive.Value)                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-hovered panel-stacked mb10">
                    <div class="panel-heading">Employee Documents</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Document Name</th>
                                            <th>Document Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>UID Card</td>
                                            <td>
                                                @Html.TextBoxFor(x => x.UIDCard, new { type = "file" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Education Document</td>
                                            <td>
                                                @Html.TextBoxFor(x => x.EducationDocument, new { type = "file" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Experience Letters</td>
                                            <td>
                                                @Html.TextBoxFor(x => x.ExperienceLetters, new { type = "file" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Project Documents</td>
                                            <td>
                                                @Html.TextBoxFor(x => x.ProjectDocuments, new { type = "file" })
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Other Documents</td>
                                            <td>
                                                @Html.TextBoxFor(x => x.OtherDocuments, new { type = "file" })
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-primary btn-sm" type="button" onclick="SaveEmployee()">Save</button>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#li_Employee').addClass('open');
            $('#li_empadd').addClass('active');

            $('.dtCss').datetimepicker({
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-arrow-up',
                    down: 'fa fa-arrow-down'
                },
                format: 'DD/MM/YYYY'
            }); 

            
        });

        $('#frmEmp').validate({
            rules: {
                'empHeader.IDType': {
                    required: true
                },
                'empWorkDetail.JoiningDate': {
                    required: true
                },
                'empHeader.FirstName': {
                    required: true
                },
                'empHeader.LastName': {
                    required: true
                },
                'empPersonalDetail.DOB': {
                    required: true
                },
                'address.Email': {
                    required: true,
                    email: true
                },
                'address.MobileNo': {
                    required: true
                },
                'empHeader.Nationality': {
                    required: true
                },
                'empPersonalDetail.MaritalStatus': {
                    required: true
                },
                'empWorkDetail.ConfirmationDate': {
                    required: true
                },
                'address.Address1': {
                    required: true
                },
                'empHeader.UserEmailId': {
                    required: true,
                    email: true
                },
                'empHeader.Password': {
                    required: true
                },
                'empHeader.ConfirmPassword': {
                    required: true,
                    equalTo: '#empHeader_Password'
                }
            }
        });
        

        function SaveEmployee() {
            if ($('#frmEmp').valid()) {
                $('#frmEmp').submit();
            }
        }
    </script>
}


