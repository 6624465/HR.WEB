@model HR.Web.ViewModels.EmployeeVm

    <div class="page">
        <div class="page-wrap">
            <div class="row">
                <div class="col-md-8">
                    <div class="panel panel-default panel-hovered panel-stacked mb30">
                        <div class="panel-heading">Profile</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">
                                    <span class="pull-right">ID Type</span>
                                </label>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(x => x.empHeader.IDType,
                                    SelectListItemHelper.EmployeeType(),
                                    "Select Type",
                                    new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Append</label>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="email" class="form-control" placeholder="Email Address">
                                        <span class="input-group-addon ion ion-email-unread"></span>
                                    </div>
                                </div>
                            </div>
                            

                            <div class="clearfix right css10">
                                <button class="btn btn-primary mr5 waves-effect" type="submit">Submit</button>
                                <button class="btn btn-default waves-effect">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default panel-hovered panel-stacked mb30">
                        <div class="panel-heading">Address</div>
                        <div class="panel-body">

                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

