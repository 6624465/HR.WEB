@model HR.Web.ViewModels.EmpDirectoryVm



@{
    WebGrid grid = new WebGrid(Model.employeeVm, rowsPerPage: 10, ajaxUpdateContainerId: "ajaxgrid");
}

@section Styles{
    <style>
        .page-dashboard .profile-widget .right-side > img {
            width: 52px;
            height: 52px;
            border-radius: 100%;
        }
    </style>
}

<div class="page">

    <div class="page-wrap">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse1" style="font-size:16px;font-weight:bold">Advanced Search</a>
                </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <div class="panel-body">
                    @using (Html.BeginForm("empsearch", "Employee", FormMethod.Post, new { id = "frmSearch", name = "frmSearch" }))
                    {
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-1 control-label">
                                    <span class="pull-right">Name</span>
                                </label>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(x => x.empSearch.EmployeeName, new { @class = "form-control", placeholder = "fname/lname/mname" })
                                </div>
                                <label class="col-md-1 control-label">
                                    <span class="pull-right">DOJ</span>
                                </label>
                                <div class="col-md-3">
                                    <div class="input-group input-sm date" id="DOJDt">
                                        @Html.TextBoxFor(x => x.empSearch.DOJ, new { @class = "form-control dtCss" })
                                        <span class="input-group-addon">
                                            <i class="ion ion-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                                <label class="col-md-1 control-label">
                                    <span class="pull-right">Emp No</span>
                                </label>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(x => x.empSearch.EmployeeNumber, new { @class = "form-control" })
                                </div>

                            </div>
                        </div>
                        <div class="row css10">
                            <div class="form-group">
                                <label class="col-md-1 control-label">
                                    <span class="pull-right">Designation</span>
                                </label>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(x => x.empSearch.Designation,
                             SelectListItemHelper.Designation(),
                             "Select Designation",
                             new { @class = "form-control" })
                                </div>
                                <label class="col-md-1 control-label">
                                    <span class="pull-right">Type</span>
                                </label>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(x => x.empSearch.Designation,
                             SelectListItemHelper.EmployeeType(),
                             "Select Type",
                             new { @class = "form-control" })
                                </div>
                                <div class="col-md-2 col-md-offset-1">
                                    <button type="submit" class="btn btn-info btn-raised waves-effect btn-sm">Search</button>
                                    @*<button type="button" id="refresh_button" class="btn btn-info btn-raised waves-effect btn-sm">Refresh</button>*@
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
        <div class="panel panel-default">
            <div class="box">
                <div class="box-header">
                    <h4>Employee List</h4>
                    <div class="box-tools">

                        <div class="btn-toolbar">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default" onclick="showTile()"><i class="fa fa-th" aria-hidden="true"></i></button>
                                <button type="button" class="btn btn-default" onclick="showGrid()"><i class="fa fa-bars" aria-hidden="true"></i></button>
                            </div>

                            <button class="btn btn-info btn-raised waves-effect btn-sm" type="button" onclick="location.href = '@Url.Content("~/Employee/add?EmployeeId=")'"><i class="fa fa-plus"></i> Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">

                <div class="row" id="ajaxgrid">
                    <div class="col-md-12">
                        @grid.GetHtml(
                                 columns: grid.Columns(
                                 grid.Column("EmployeeName", "Employee Name", canSort: true),
                                 grid.Column("JobTitle", "Job Title", canSort: true),
                                 grid.Column("OfficialEmailId", "Official Email", canSort: true),
                                 grid.Column("", "#Action", canSort: false, format: @<text><button class="btn btn-xs btn-raised waves-effect" onclick="location.href = '@Url.Content("~/Employee/add?EmployeeId=" + item.EmployeeId)'" style="padding-left: 5px;margin-left: 6px;"><i class="fa fa-pencil" style="padding-left: 5px;"></i></button></text>)),
                                 tableStyle: "table table-condensed")
                    </div>
                    <div class="col-sm-12">
                        <div class="pull-right">@grid.PagerList(mode: WebGridPagerModes.All, paginationStyle: "pagination pagination-sm")</div>
                    </div>
                </div>

                <div class="row" id="tiles">
                    @for (int i = 0; i < Model.employeeVm.Count(); i++)
                    {
                        @* <div class="col-md-4 col-sm-6">
                                                        <img alt="@Model.employeeVm.ElementAt(i).EmployeeName" class="img-thumbnail"
                                         src="https://www.mearto.com/assets/no-image-83a2b680abc7af87cfff7777d0756fadb9f9aecd5ebda5d34f8139668e0fc842.png" />
                                    <b>@Model.employeeVm.ElementAt(i).EmployeeName</b>

                            </div>*@
                        <div class="col-md-4 col-sm-6">
                            <div class="panel panel-default mb20 panel-hovered profile-widget">
                                <div class="panel-body">
                                    <div class="clearfix mb15 top-info">

                                        <div class="right">
                                            <img height="60" width="60"
                                                 src=@Url.Content("~/Uploads/" + Model.employeeVm.ElementAt(i).EmployeeId + "/" +Model.employeeVm.ElementAt(i).ProfilePic)
                                                 alt="user"
                                                 onclick="location.href = '@Url.Content("~/Employee/add?EmployeeId=" + Model.employeeVm.ElementAt(i).EmployeeId)'"
                                                 style="cursor:pointer">

                                        </div>
                                        <div class="left-side">
                                            <h3 class="text-light mt0">@Model.employeeVm.ElementAt(i).EmployeeName</h3>
                                            <p><strong>Designation:&nbsp;</strong>@Model.employeeVm.ElementAt(i).EmployeeName</p>
                                            <p><strong>Email:&nbsp;</strong>@Model.employeeVm.ElementAt(i).ContactNo</p>
                                            <p><strong>Contact No: </strong>@Model.employeeVm.ElementAt(i).ContactNo</p>
                                        </div>

                                    </div>

                                </div> <!-- #end panel-body -->
                            </div>
                        </div>

                    }
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#ajaxgrid').show();
            $('#tiles').hide();

            $('#li_Employee').addClass('open');
            $('#li_empdir').addClass('active');

            $('.dtCss').datetimepicker({
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-arrow-up',
                    down: 'fa fa-arrow-down',
                    previous: 'fa fa-arrow-left',
                    next: 'fa fa-arrow-right'
                },
                format: 'DD/MM/YYYY'
            });
        });
        $('#refresh_button').click(function () {
            debugger
            location.reload();
        });
        function showTile() {
            $('#ajaxgrid').hide();
            $('#tiles').show();
        }
        function showGrid() {
            $('#ajaxgrid').show();
            $('#tiles').hide();
        }
    </script>
}
