
@model IQueryable<HR.Web.Models.LookUp>

@{
    ViewBag.Title = "Employee Status";

    WebGrid grid = new WebGrid(Model, canPage: true, rowsPerPage: 5);
    grid.Pager(WebGridPagerModes.All);

}
<div class="col-md-12">
    <div class="panel panel-lined table-responsive panel-hovered mb20 data-table" style="margin-top:66px;padding-bottom: 20px">
        <div class="panel-heading" style="font-size: large;">
            Employee Status
            <button class="md-raised md-button md-primary waves-effect pull-right"><i class="fa fa-plus"></i>&nbsp; ADD</button>
        </div>
        <div class="panel-body">
        </div>
        @grid.GetHtml(
tableStyle: "table table-hover",
headerStyle: "Grid-Header",
alternatingRowStyle: "Grid-alt",
selectedRowStyle: "Grid-selected",
rowStyle: "Grid-rowstyle",
footerStyle: "Grid-Footer",
mode: WebGridPagerModes.All,
columns: grid.Columns(
  // grid.Columns(grid.Column("LookUpId", format: (item) => item.GetSelectLink(item.LookUpId.ToString())),
  grid.Column(columnName: "LookUpCode", header: "Employee Status Name"),
  grid.Column(columnName: "LookUpDescription", header: "Employee Status Description"),
  grid.Column(columnName: "IsActive", header: "Status"),
 grid.Column("", "#Action", canSort: false, format: @<text><button class="btn btn-default waves-effect" onclick="editEmpStatus()"><i class="fa fa-pencil"></i></button></text>))
     )
    </div>
</div>
<style>
    #grid {
        margin-top: 30px;
        margin-left: 50px;
    }

    .table table-hover {
        margin: 4px;
        border-collapse: collapse;
        width: 500px;
        background-color: #B4CFC3;
    }

    .Grid-Header {
        background-color: #C1D4E6;
        font-weight: bold;
        color: #FFF;
    }

    .webGrid th, .webGrid td {
        border: 1px solid #C0C0C0;
        padding: 5px;
    }

    .Grid-alt {
        background-color: #E4E9F5;
        color: #000;
    }

    .gridHead a:hover {
        text-decoration: underline;
    }

    .description {
        width: auto;
    }

    .Grid-selected {
        background-color: #71857C;
    }
</style>



