@model IEnumerable<HR.Web.Models.LookUp>

@{
    ViewBag.Title = "EmployeeStatus";
}
@{
    WebGrid grid = new WebGrid(Model);
}
<div class="page">
    <div class="page-wrap">
        <div class="panel panel-default">
            <div class="box">
                <div class="box-header">
                    <h4>Employee Status</h4>
                    <div class="box-tools">
                        <button class="btn btn-info btn-raised waves-effect" type="button" onclick="editEmpStatus(-1);"><i class="fa fa-plus"></i> Add</button>
                    </div>
                </div>
                <div class="box-body">
                    @grid.GetHtml(
                        columns: grid.Columns(
                        grid.Column("LookUpCode", "Employee Status Name", canSort: true),
                        grid.Column("LookUpDescription", "Employee Status Description", canSort: true),
                        grid.Column("IsActive", "Status", canSort: true),
                        grid.Column("", "#Action", canSort: false, format:@<text><button class="btn btn-xs btn-raised btn-default waves-effect" onclick="editEmpStatus(@item.LookUpID)"><i class="fa fa-pencil" style="padding-left: 5px;"></i></button></text>)),
                        tableStyle: "table")
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("SaveEmployeeStatus", "Config", FormMethod.Post, new { id = "frm", name = "frm" }))
{
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Employee Status</h4>
                </div>
                <div class="modal-body" id="modalContent">

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info" onclick="SaveChanges()">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    
                </div>
            </div>

        </div>
    </div>
}
@section Scripts{
    <script type="text/javascript">
        function editEmpStatus(lookupID) {
            debugger;
            $.ajax({
                url: '@Url.Content("~/Config/GetEmployeeStatus?lookupID=")' + lookupID,
                contentType: 'text/html',
                method: 'GET',
                success: function (data) {
                    debugger;
                    $('#myModal').modal('show');
                    $('#modalContent').html('');
                    $('#modalContent').html(data);
                }
            });
        }

        function SaveChanges() {
            if ($('#frm').valid()) {
                $('#frm').submit();
            }
        }

        $('#frm').validate({
            rules: {
                LookUpCode: {
                    required: true
                },
                LookUpDescription: {
                    required: true
                }
            }
        });
    </script>
}
