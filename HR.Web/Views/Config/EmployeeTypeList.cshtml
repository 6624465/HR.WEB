@model IEnumerable<HR.Web.Models.LookUp>

@{
    ViewBag.Title = "EmployeeType";
}
@{ 
    WebGrid grid = new WebGrid(Model, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
}
<div class="page">
    <div class="page-wrap">
        <div class="panel panel-default">
            <div class="box">
                <div class="box-header">
                    <h4>Employee Type</h4>
                    <div class="box-tools">
                        <button class="btn btn-info btn-raised waves-effect" type="button" onclick="editEmpType(-1);"><i class="fa fa-plus"></i> Add</button>
                    </div>
                </div>
                <div class="box-body">
                    @grid.GetHtml(

                footerStyle: "Grid-Footer",
                columns: grid.Columns(
                grid.Column("LookUpCode", "Employee Type Name", canSort: true),
                grid.Column("LookUpDescription", "Employee Type Description", canSort: true),
                 //grid.Column("IsActive", "Status", canSort: false),
                @*grid.Column("IsActive", "Status", format:@<text>
                    <div class="ui-toggle ui-toggle-sm ui-toggle-primary mb10">
                        <label class="ui-toggle-inline">
                            <label class="ui-toggle-inline">
                                <input id="IsActive" name="IsActive.Value" type="checkbox" checked="@item.IsActive" >
                                <span></span>
                            </label>
                        </label>
                        </div>
                </text>),*@
                grid.Column("", "#Action", canSort: false, format: @<text><button class="btn btn-xs btn-raised waves-effect" onclick="editEmpType(@item.LookUpID)" style="padding-left: 5px;margin-left: 6px;"><i class="fa fa-pencil" style="padding-left: 5px;"></i></button></text>)),
                tableStyle: "table")
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("SaveEmployeeType", "Config", FormMethod.Post, new { id = "frm", name = "frm" }))
{
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">       
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Employee Type</h4>
            </div>
            <div class="modal-body" id="modalContent">
               
            </div>
            <div class="modal-footer">
                <button type="button" onclick="SaveChanges()" class="btn btn-info btn-raised">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                
            </div>
        </div>

    </div>
</div>
}
@section Scripts{
    <script type="text/javascript">
        function editEmpType(lookupID) {
            debugger
            $.ajax({
                url: '@Url.Content("~/Config/GetEmployeeType?lookupID=")' + lookupID,
                contentType: 'text/html',
                method: 'GET',
                success: function (data) {
                    debugger
                    $('#myModal').modal('show');
                    $('#modalContent').html('');
                    $('#modalContent').html(data);
                }
            });
        }
        $('#frm').validate({
            rules: {
                LookUpCode: {
                    required: true
                },
                LookUpDescription: {
                    required: true
                }
            }
        });
        function SaveChanges() {
            $('#frm').submit();
        }


       
       
    </script>
}
