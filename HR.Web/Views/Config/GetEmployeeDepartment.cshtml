@model HR.Web.Models.LookUp
<style>
    #error {
        display: none;
        color: Red;
    }
</style>
<div class="row">
    @Html.HiddenFor(x => x.LookUpID)
    @*@Html.HiddenFor(x => x.IsActive)*@
    <div class="form-group">
        <label class="col-md-4 control-label">
            <span class="pull-right">Type</span>
        </label>
        @if (Model.LookUpID==-1)
        {
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.LookUpCode,
            new { @class = "form-control input-sm uppercase", onblur = "checkDepartment(this)", @maxlength = "50" })
                <label id="error">Employee Department Already Exists.</label>
            </div>
        }
        else
        {
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.LookUpCode,
            new { @class = "form-control input-sm uppercase", @maxlength = "50" })
            </div>

        }

    </div>
</div>
<div class="row css10">
    <div class="form-group">
        <label class="col-md-4 control-label">
            <span class="pull-right">Description</span>
        </label>
        <div class="col-md-8">
            @Html.TextAreaFor(x => x.LookUpDescription,
            new { @class = "form-control input-sm uppercase", @maxlength = "50" })
        </div>
    </div>
    </div>
    @*<div class="row">
        <label class="col-md-4 control-label">
            <span class="pull-right">IsActive</span>
        </label>
        <div class="col-md-4">
            <div style="margin-top:10px;">@Html.CheckBoxFor(x => x.IsActive)</div>
        </div>
    </div>*@
    <script type="text/javascript">
    $(document).ready(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_flat-blue',
            radioClass: 'iradio_flat-blue',
            increaseArea: '20%' // optional
        });
    });
    function checkDepartment(el) {
        $.ajax({
            url: '@Url.Content("~/Config/IsEmployeeDepartmentExist?Department=")' + $('#LookUpCode').val(),
            method: 'get',
            contentType: 'Json',
            success: function (result) {
                if (result == "True") {
                    $('#error').show();
                    $('#LookUpCode').val('');
                    $('#error').fadeOut(5000);
                }
                else {
                    $('#error').hide();
                }
            },
            error: function (err) {
                return result;
            }

        });
    }
    </script>

