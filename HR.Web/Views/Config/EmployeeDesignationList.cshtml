@model IEnumerable<HR.Web.Models.LookUp>



@{
    WebGrid grid = new WebGrid(Model, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
}
<div class="page">
    <div class="page-wrap">
        <div class="panel panel-default">
            <div class="box">
                <div class="box-header">
                    <h4>Employee Designation</h4>
                    <div class="box-tools">
                        <button class="btn btn-info btn-raised waves-effect" type="button" onclick="editEmpDesignation(-1);"><i class="fa fa-plus"></i> Add</button>
                    </div>
                </div>
                <div class="box-body">
                    @grid.GetHtml(
                    headerStyle: "Grid-Header",
                    alternatingRowStyle: "Grid-alt",
                    selectedRowStyle: "Grid-selected",
                    rowStyle: "Grid-rowstyle",
                    footerStyle: "Grid-Footer",
                columns: grid.Columns(
                grid.Column("LookUpCode", "Employee Designation Name", canSort: true),
                grid.Column("LookUpDescription", "Employee Designation Description", canSort: true),
                grid.Column("IsActive", "Status"),
                grid.Column("", "#Action", canSort: false, format: @<text><button class="btn btn-xs btn-raised btn-default waves-effect" style="padding-left: 5px;margin-left: 6px;" onclick="editEmpDesignation(@item.LookUpID)"><i class="fa fa-pencil" style="padding-left: 5px;"></i></button></text>)),
                tableStyle: "table")
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("SaveEmployeeDesignation", "Config", FormMethod.Post, new { id = "frm", name = "frm" }))
{
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Employee Designation</h4>
                </div>
                <div class="modal-body" id="modalContent">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" onclick="SaveChanges()" class="btn btn-default">Save Changes</button>
                </div>
            </div>

        </div>
    </div>
}
@section Scripts{
    <script type="text/javascript">
        function editEmpType(lookupID) {
            $.ajax({
                url: '@Url.Content("~/Config/GetDesignationByID?lookupID=")' + lookupID,
                contentType: 'text/html',
                method: 'GET',
                success: function (data) {
                    $('#myModal').modal('show');
                    $('#modalContent').html('');
                    $('#modalContent').html(data);
                }
            });
        }

        function SaveChanges() {
            if ($('#frm').valid()) {
                $('#frm').submit();
            }
        }

        $('#frm').validate({
            rules: {
                LookUpCode: {
                    required: true
                },
                LookUpDescription: {
                    required: true
                }
            }
        });
    </script>
}<style>
