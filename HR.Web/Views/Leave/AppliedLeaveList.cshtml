@model IEnumerable<HR.Web.ViewModels.AppliedLeaveListVm>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style type="text/css">
        /*.panel-heading {
            background-color: black !important;
        }*/
    </style>
}
<div class="page">
    <div class="page-wrap">
        <div class="">
            <div class="panel-group" id="accordionDemo">
                @for (var i = 0; i < Model.Count(); i++)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">                                
                                <a href="#collapse@(i)" 
                                   data-toggle="collapse" 
                                   class="collapsed" 
                                   data-parent="#accordionDemo">
                                    <b style="font-weight:bold;">@Model.ElementAt(i).BranchName</b>
                                    <span class="pull-right clearfix"><i class="fa fa-plus"></i></span>
                                </a>
                            </h3>
                        </div>
                        <div class="panel-collapse collapse" id="collapse@(i)">
                            <div class="panel-body">
                                <div>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>EmployeeId</th>
                                                <th>From Date</th>
                                                <th>To Date</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (var j = 0; j < Model.ElementAt(i).employeeLeaveList.Count(); j++)
                                        {
                                        <tr>
                                            <td>@Model.ElementAt(i).employeeLeaveList.ElementAt(j).EmployeeId</td>
                                            <td>@Model.ElementAt(i).employeeLeaveList.ElementAt(j).FromDate</td>
                                            <td>@Model.ElementAt(i).employeeLeaveList.ElementAt(j).ToDate</td>
                                        </tr>
                                        }
                                        </tbody>

                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
