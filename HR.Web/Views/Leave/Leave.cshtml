@model HR.Web.ViewModels.BranchLeaveVm
@section Styles{
    <style>
        .chkClass {
            position: relative;
            right: 40px;
        }

        .width {
            width: 80%;
        }
    </style>
}

@using (Html.BeginForm("Leave", "Leave", FormMethod.Post, new { id = "frmLeave", name = "frmLeave" }))
{
    @Html.HiddenFor(x => x.leave.LeaveId)
    <div class="page">
        <div class="panel panel-default panel-hovered panel-stacked mb10">
            <div class="panel-heading">
                Leave Policy
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-hovered panel-stacked mb10">
                    <div class="panel-heading">
                        Paid Leaves
                    </div>
                    <div class="panel-body">
                        <div class="row css5">
                            <div class="col-md-8">
                                @if (ViewBag.RoleCode == UTILITY.ROLE_SUPERADMIN)
                                {
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Branch</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.DropDownListFor(x => x.leave.BranchId,
                                    SelectListItemHelper.Branches(),
                                    "Select Branch",
                                    new { @class = "form-control", onchange = "GetBranchData(this)" })
                                    </div>
                                }
                                else
                                {
                                    @Html.HiddenFor(x => x.leave.BranchId)
                                }
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="col-md-12">
                                <div class="col-md-4 css5">
                                    <div class="form-group">
                                        <div class="row">
                                            <label class="col-md-6 control-label">
                                                <span class="pull-right">Per Year</span>
                                            </label>
                                            <div class="col-md-6">
                                                @Html.TextBoxFor(x => x.leave.PaidLeavesPerYear, new { @class = "form-control numCss", required = "required", onblur = "calcLeavePerMonth(this)" })

                                            </div>
                                        </div>
                                        <div class="row css5">
                                            <label class="col-md-6 control-label">
                                                <span class="pull-right">Per Month</span>
                                            </label>
                                            <div class="col-md-6">
                                                @Html.TextBoxFor(x => x.leave.PaidLeavesPerMonth,
                                    new { @class = "form-control decimalCss", @readonly = "readonly" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-6 control-label">
                                            <span class="pull-right" style="white-space:nowrap;">Carry Forward</span>
                                        </label>
                                        <div class="col-md-2" style="margin-top:10px">
                                            @Html.CheckBoxFor(x => x.leave.IsPaidLeaveCarryForward, new { @class = "form-control " })
                                        </div>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(x => x.leave.CarryForwardPerYear,
                                    new { @class = "form-control decimalCss" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="center-block width">
                                        <h5>WEEKEND POLICY</h5>
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>

                                                        <th>Monday</th>
                                                        <th>Tuesday</th>
                                                        <th>Wednesday</th>
                                                        <th>Thursday</th>
                                                        <th>Friday</th>
                                                        <th>Saturday</th>
                                                        <th>Sunday</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.Monday), Model.weekendPolicy.Monday ?? false)
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.IsMondayHalfDay), Model.weekendPolicy.IsMondayHalfDay ?? false)
                                                        </td>
                                                        <td>
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.Tuesday), Model.weekendPolicy.Tuesday ?? false)
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.IsTuesdayHalfDay), Model.weekendPolicy.IsTuesdayHalfDay ?? false)
                                                        </td>
                                                        <td>
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.Wednesday), Model.weekendPolicy.Wednesday ?? false)
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.IsWednesdayHalfDay), Model.weekendPolicy.IsWednesdayHalfDay ?? false)
                                                        </td>
                                                        <td>
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.Thursday), Model.weekendPolicy.Thursday ?? false)
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.IsThursdayHalfDay), Model.weekendPolicy.IsThursdayHalfDay ?? false)
                                                        </td>
                                                        <td style="white-space:nowrap">
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.Friday), Model.weekendPolicy.Friday ?? false)
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.IsFridayHalfDay), Model.weekendPolicy.IsFridayHalfDay ?? false)
                                                        </td>
                                                        <td>
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.Saturday), Model.weekendPolicy.Saturday ?? false)
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.IsSaturdayHalfDay), Model.weekendPolicy.IsSaturdayHalfDay ?? false)
                                                        </td>
                                                        <td>
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.Sunday), Model.weekendPolicy.Sunday ?? false)
                                                            @Html.CheckBox(nameof(Model.weekendPolicy.IsSundayHalfDay), Model.weekendPolicy.IsSundayHalfDay ?? false)
                                                        </td>

                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default panel-hovered panel-stacked mb10">
                    <div class="panel-heading">
                        Sick Leaves
                    </div>
                    <div class="panel-body">
                        <div class="row css5">
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-md-4 control-label">
                                        <span class="pull-right">Per Year</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.leave.SickLeavesPerYear,
                                       new { @class = "form-control numCss", onblur = "calcSickLeave(this)" })
                                    </div>
                                </div>
                                <div class="row css5">
                                    <label class="col-md-4 control-label">
                                        <span class="pull-right">Per Month</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.leave.SickLeavesPerMonth,
                                    new { @class = "form-control decimalCss", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    <span class="pull-right">Carry Forward</span>
                                </label>
                                <div class="col-md-2" style="margin-top:10px">
                                    @Html.CheckBoxFor(x => x.leave.IsSickLeaveCarryForward, new { @class = "form-control " })
                                </div>
                                <div class="col-md-3 chkClass">
                                    @Html.TextBoxFor(x => x.leave.CarryForwardSickLeaves,
                                    new { @class = "form-control decimalCss" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default panel-hovered panel-stacked mb10">
                        <div class="panel-heading">
                            Casual Leaves
                        </div>
                        <div class="panel-body">
                            <div class="row css5">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-4 control-label">
                                            <span class="pull-right">Per Year</span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(x => x.leave.CasualLeavesPerYear, new { @class = "form-control numCss",onblur= "calcCasualLeave(this)" })
                                        </div>
                                    </div>
                                    <div class="row css5">
                                        <label class="col-md-4 control-label">
                                            <span class="pull-right">Per Month</span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(x => x.leave.CasualLeavesPerMonth,
                                    new { @class = "form-control decimalCss",@readonly="readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row css5">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">
                                        <span class="pull-right">Carry Forward</span>
                                    </label>
                                    <div class="col-md-2" style="margin-top:10px">
                                        @Html.CheckBoxFor(x => x.leave.IsCasualLeaveCarryForward, new { @class = "form-control " })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-primary btn-sm" type="button" onclick="SaveLeave()"><i class="fa fa-floppy-o" aria-hidden="true"></i>Save</button>
            </div>
        </div>
    </div>

}

@using (Html.BeginForm("GetLeaves", "Leave", FormMethod.Post, new { id = "frmGetLeaves", name = "frmGetLeaves" }))
{
    <input type="hidden" id="hdnBranchId" name="leave.BranchId" />
}


@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#li_Leave').addClass('open');
            $('#li_Leavepolicy').addClass('active');
            $('#li_empdir').addClass('active');

            $.validator.addMethod("ValidatePaidLeave", function () {
                if ((parseInt($('#PaidLeavesPerMonth').val()) == 0 && parseInt($('#PaidLeavesPerYear').val()) == 0) ||
                    parseInt($('#PaidLeavesPerMonth').val()) < parseInt($('#PaidLeavesPerYear').val())) {
                    return true;
                } else
                    return false;
            }, "Please Paid Leaves Per Month should be less than Paid Leaves Per Year ");

            $.validator.addMethod("ValidateSickLeave", function () {
                if ((parseInt($('#SickLeavesPerMonth').val()) == 0 && parseInt($('#SickLeavesPerYear').val()) == 0)
                    || parseInt($('#SickLeavesPerMonth').val()) < parseInt($('#SickLeavesPerYear').val())) {
                    return true;
                } else
                    return false;
            }, "Please Sick Leaves Per Month should be less than Sick Leaves Per Year ");

            $.validator.addMethod("ValidateCasualLeave", function () {
                if ((parseInt($('#CasualLeavesPerMonth').val()) == 0 && parseInt($('#CasualLeavesPerYear').val()) == 0)
                    || parseInt($('#CasualLeavesPerMonth').val()) < parseInt($('#CasualLeavesPerYear').val())) {
                    return true;
                } else
                    return false;
            }, "Please Casual Leaves Per Month should be less than Casual Leaves Per Year ");

            $.validator.addMethod("CarryForwardPaidLeave", function () {
                if ((parseInt($('#CarryForwardPerYear').val()) == 0 && parseInt($('#PaidLeavesPerYear').val()) == 0)
                    || parseInt($('#CarryForwardPerYear').val()) < parseInt($('#PaidLeavesPerYear').val())) {
                    return true;
                } else
                    return false;
            }, "Please CarryForward Leaves Per Month should be less than Paid Leaves Per Year ");


            $.validator.addMethod("CarryForwardSickLeave", function () {
                if ((parseInt($('#CarryForwardSickLeaves').val()) == 0 && parseInt($('#SickLeavesPerYear').val()) == 0)
                    || parseInt($('#CarryForwardSickLeaves').val()) < parseInt($('#SickLeavesPerYear').val())) {
                    return true;
                } else
                    return false;
            }, "Please CarryForward Leaves Per Month should be less than Sick Leaves Per Year ");

            //$.validator.addMethod("CarryForwardCasualLeave", function () {
            //    if (parseInt($('#CarryForwardSickLeaves').val()) < parseInt($('#SickLeavesPerYear').val())) {
            //        return true;
            //    } else
            //        return false;
            //}, "Please CarryForward Leaves Per Month should be less than Sick Leaves Per Year ");


        });

        function calcLeavePerMonth(obj) {
            debugger;
            var peryear = $('#' + obj.id).val();
            var PaidLeavesPerMonth = (peryear / 12).toFixed(2);
            $('#leave_PaidLeavesPerMonth').val(PaidLeavesPerMonth);
        }
        function calcSickLeave(obj) {
            var peryear = $('#' + obj.id).val();
            var PaidLeavesPerMonth = (peryear / 12).toFixed(2);
            $('#leave_SickLeavesPerMonth').val(PaidLeavesPerMonth);
        }

        function calcCasualLeave(obj) {
            var peryear = $('#' + obj.id).val();
            var PaidLeavesPerMonth = (peryear / 12).toFixed(2);
            $('#leave_CasualLeavesPerMonth').val(PaidLeavesPerMonth);
        }


        function SaveLeave() {
            $('#frmLeave').validate({
                rules: {
                    CountryCode: {
                        required: true
                    },
                    PaidLeavesPerYear: {
                        required: true,
                        ValidatePaidLeave: true
                    },
                    PaidLeavesPerMonth: {
                        required: true,
                        ValidatePaidLeave: true
                    },
                    CarryForwardPerYear: {
                        required: true,
                        CarryForwardPaidLeave: true
                    },
                    SickLeavesPerYear: {
                        required: true,
                        ValidateSickLeave: true
                    },
                    SickLeavesPerMonth: {
                        required: true,
                        ValidateSickLeave: true
                    },
                    CarryForwardSickLeaves: {
                        required: true,
                        CarryForwardSickLeave: true
                    },
                    CasualLeavesPerYear: {
                        required: true,
                        ValidateCasualLeave: true
                    },
                    CasualLeavesPerMonth: {
                        required: true,
                        ValidateCasualLeave: true
                    }
                }
            });
            if ($('#frmLeave').valid()) {
                $.loader({
                    className: "blue-with-image-2",
                    content: '',
                });
                $('#frmLeave').submit();
            }

        }


        function GetBranchData(el) {

            $('#hdnBranchId').val(el.value);
            $('#frmGetLeaves').submit();
        }

    </script>
}
