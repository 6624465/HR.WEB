@model HR.Web.ViewModels.CompanyVm

@section Styles{
    <style type="text/css">
        .icheckbox_flat {
            margin-top: -23px;
        }
    </style>
}
@using (Html.BeginForm("Company", "Administration", FormMethod.Post, new
{ id = "frmCompany", name = "frmCompany", enctype = "multipart/form-data" }))
{
    <div class="page">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    @{Html.RenderPartial("_TreeView", Model.companyTreeVm); }
                </div>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default panel-hovered panel-stacked mb10">
                            <div class="panel-heading">Company</div>
                                    <button type="button" onclick="location.href='@Url.Content("~/Administration/AddBranch?branchId=0" )'" class="btn btn-primary btn-sm pull-right">Add Branch</button>
                            @Html.HiddenFor(x => x.company.CompanyId)
                            <div class="panel-body">
                                <div class="row css5">

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">
                                            <span class="pull-right">Company Code</span>
                                        </label>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(x => x.company.CompanyCode, new { @class = "form-control input-sm", @maxlength="20" })
                                        </div>
                                        <label class="col-md-3 control-label">
                                            <span class="pull-right">Company Name</span>
                                        </label>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(x => x.company.CompanyName, new { @class = "form-control input-sm", @maxlength="200" })
                                        </div>
                                       
                                    </div>
                                </div>
                                <div class="row css5">
                                    <div class="form-group">
                                       
                                        <label class="col-md-3 control-label">
                                            <span class="pull-right">Registration No</span>
                                        </label>
                                        <div class="col-md-3">
                                            @Html.TextBoxFor(x => x.company.RegNo, new { @class = "form-control input-sm" })
                                        </div>
                                        <label class="col-md-3 control-label">
                                            <span class="pull-right">InCorporate Date</span>
                                        </label>
                                        <div class="col-md-3">
                                            <div class="input-group date dtCss" id="CorporationDate">
                                                @Html.TextBoxFor(x => x.company.InCorporationDate, new { @class = "form-control dtCssTxt input-sm" })
                                                <span class="input-group-addon">
                                                    <i class="ion ion-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               
                                <div class="row css5">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">
                                            <span class="pull-right">Logo</span>
                                        </label>
                                        <div class="col-md-4" style="margin-top:10px;">
                                            @Html.TextBoxFor(x => x.company.Logo, new { type = "file" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        @{Html.RenderPartial("_Address", Model.companyAddress); }
                    </div>                    
                </div>
            </div>
        </div>
        
        

        

        <div class="row">
            <div class="col-md-12">
                <div>
                    <button class="btn btn-primary btn-sm" type="button" onclick="SaveCompany()"><i class="fa fa-floppy-o" aria-hidden="true"></i>Save</button>
                </div>
            </div>
        </div>
    </div>
            }

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#li_Admin').addClass('open');
            $('#li_company').addClass('active');
            /*Tree View Starts*/


            /*Tree View Ends*/


            $('.dtCss').datetimepicker({
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-arrow-up',
                    down: 'fa fa-arrow-down',
                    previous: 'fa fa-arrow-left',
                    next: 'fa fa-arrow-right'
                },
                format: dateFormat
            });

            $('#frmCompany').validate({
                rules: {
                    'company.CompanyCode': {
                        required: true,
                        maxlength:20
                    },
                    'company.CompanyName': {
                        required: true,
                        maxlength:200
                    },
                    'company.RegNo': {
                        required: true
                    },
                    //'company.InCorporationDate': {
                    //    required: true
                    //},
                    'Address1': {
                        required: true,
                        maxlength:200
                    },
                    'CityName': {
                        required: true
                    },
                    'StateName': {
                        required: true
                    },
                    'CountryCode': {
                        required: true
                    },
                    'TelNo': {
                        required: true,
                    },
                    'FaxNo': {
                        required: true,
                    },
                    'MobileNo': {
                        required: true,
                        number: true
                    },
                    'Contact': {
                        required: true,
                        
                    },
                    'Email': {
                        'email': true,
                        required: true
                    },
                   
                }
            });
        })
        function SaveCompany() {
            if ($('#frmCompany').valid()) {
                $('#frmCompany').submit();
                swal({
                    title: "Saved Successfully",
                    text: "",
                    closeOnConfirm: true,
                    confirmButtonText: "Ok",
                    confirmButtonClass: "btn-primary",
                    timer: 5000
                },
                                         function () {
                                             $.loader({
                                                 className: "blue-with-image-2",
                                                 content: '',
                                             });
                                         })
            }
            else {
                swal("Incorrect Inputs");
            }

        }
    </script>
}