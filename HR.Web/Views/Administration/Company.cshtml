@model HR.Web.ViewModels.CompanyVm
@using (Html.BeginForm("Company", "Administration", FormMethod.Post, new
{ id = "frmCompany", name = "frmCompany", enctype = "multipart/form-data" }))
{
    <div class="page">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-hovered panel-stacked mb10">
                    <div class="panel-heading">Company</div>

                    <div class="panel-body">
                        <div class="row css5">

                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">CompanyCode</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.company.CompanyCode, new { @class = "form-control" })
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">IsActive</span>
                                </label>
                                <div class="ui-toggle ui-toggle-sm ui-toggle-primary mb10">
                                    <label class="ui-toggle-inline">
                                        <label class="ui-toggle-inline">
                                            <input id="IsActive" name="IsActive.Value" type="checkbox">
                                            <span></span>
                                        </label>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Company Name</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.company.CompanyName, new { @class = "form-control" })
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Registration No</span>
                                </label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.company.RegNo, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row css5">
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">InCorporate Date</span>
                                </label>
                                <div class="col-md-4">
                                    <div class="input-group date" id="CorporationDate">
                                        @Html.TextBoxFor(x => x.company.InCorporationDate, new { @class = "form-control" })
                                        <span class="input-group-addon">
                                            <i class="ion ion-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                                <label class="col-md-2 control-label">
                                    <span class="pull-right">Tax ID</span>
                                </label>
                                <div class="col-md-4">
                                    @*@Html.TextBoxFor(x => x.Gst, new { @class = "form-control" })*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default panel-hovered panel-stacked mb10">
                        <div class="panel-heading">Address</div>
                        <div class="panel-body">
                            <div class="row css5">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Address1</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextAreaFor(x => x.companyAddress.Address1, new { @class = "form-control" })
                                    </div>
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Address2</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextAreaFor(x => x.companyAddress.Address2, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row css5">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">City Name</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.CityName, new { @class = "form-control" })
                                    </div>
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">State Name</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.StateName, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row css5">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Country Code</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.DropDownListFor(x => x.companyAddress.CountryCode, SelectListItemHelper.CountryList(),
                                   "--Select--", new { @class = "form-control" })
                                    </div>
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Zip Code</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.ZipCode, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row css5">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Tel No</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.TelNo, new { @class = "form-control" })
                                    </div>
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Fax No</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.FaxNo, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row css5">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Mobile No</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.MobileNo, new { @class = "form-control" })
                                    </div>
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Contact</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.Contact, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row css5">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Email</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.Email, new { @class = "form-control" })
                                    </div>
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">WebSite</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.companyAddress.WebSite, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row css5">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        <span class="pull-right">Logo</span>
                                    </label>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(x => x.company.Logo, new { type = "file" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div>
                                        <button class="btn btn-primary" type="button" onclick="SaveCompany()">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
}

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#frmCompany').validate({
                rules: {
                    'company.CompanyCode': {
                        required:true
                    },
                    'company.CompanyName': {
                        required: true
                    },
                    'company.RegNo': {
                        required: true
                    },
                    //'company.InCorporationDate': {
                    //    required: true
                    //},
                    'companyAddress.Address1': {
                        required: true
                    },
                    'companyAddress.CityName': {
                        required: true
                    },
                    'companyAddress.StateName': {
                        required: true
                    },
                    'companyAddress.CountryCode': {
                        required: true
                    },
                    'companyAddress.TelNo': {
                        required: true
                    },
                    'companyAddress.FaxNo': {
                        required: true
                    },
                    'companyAddress.MobileNo': {
                        required: true
                    },
                    'companyAddress.Contact': {
                        required: true
                    },
                    'companyAddress.Email': {
                        'email':true,
                        required: true
                    },
                }
            });
        })
        function SaveCompany()
        {
            if ($('#frmCompany').valid()) {
                $('#frmCompany').submit()
            }

        }
    </script>
}